<div id="DivTablaBodegas" class="card p-5 rounded">
    <table id="TablaBodegas" class="table-responsive table align-middle mb-0 bg-white w-100 table table-striped table-hover table-bordered rounded-2">
        <thead class="bg-light">
            <tr>
                <th>Nombre Bodega</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        </tbody>
    </table>
</div>


<div id="DivAgregarBodega" style="display:none" class="container shadow-lg p-4">
    <form class="row" id="AgregarBodegaForm">

        <p class="text-start my-3 fw-bold fs-4">Datos Bodega</p>

        <!-- Lado izquierdo -->

        <div class="col-12">
            <label for="NombreBodega" class="form-label">Nombre Bodega:</label>
            <input type="text" class="form-control" id="NombreBodega" name="NombreBodega">
            <div class="invalid-feedback"></div>
        </div>


        <div class=" p-4">
            <hr style="border: 2PX solid BLACK" />
        </div>


        <p class="text-start my-3 fw-bold fs-4">Productos A Agregar</p>

        <div id="DivTablaProductosBodega" style="margin-bottom: 30px">
            <div class="d-flex justify-content-between align-items-center mb-2">
                <h5 class="mb-0">Lista de productos</h5>
                <button id="btnAgregarFila" type="button" class="btn btn-success">
                    <i class="fa-solid fa-plus"></i> Agregar producto
                </button>
            </div>

            <table id="TablaProductosBodega" class="table-responsive table align-middle mb-0 bg-white w-100 table table-striped table-hover table-bordered rounded-2">
                <thead class="bg-light">
                    <tr>
                        <th>Producto</th>
                        <th>Cantidad</th>
                        <th>Acción</th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>


        <div style="text-align: right; background-color: #D3CECE;" class="p-2 pt-2">
            <button type="button" id="GuardarDatosBodega" class="btn btn-primary">
                <i class="fa-solid fa-floppy-disk"></i> Agregar
            </button>
            <button id="cancelButton" type="button" class="btn btn-danger">
                <i class="fa-solid fa-rotate-left"></i> Cancelar
            </button>
        </div>



    </form>
</div>

<div id="DivEditarOInfo" style="display:none">

</div>




@section Scripts {

    <script src="~/JSscripts/Bodega/Index.js"></script>
}
