<div>
    <form id="TrasladoBodegaForm">
        <div class="panel-body mb-4">
            <p class="text-start my-3 fw-bold fs-4">Datos Traslados</p>

            <div class="row">

                <div class="col-md-6">
                    <label for="BodegaId" class="form-label">Bodega:</label>

                    <select id="BodegaId" name="BodegaId"
                            class="form-control selectpicker"
                            data-live-search="true"
                            data-width="100%"
                            title="Seleccione una bodega">
                        @if (ViewBag.ListaBodegas != null)
                        {
                            foreach (var bodega in ViewBag.ListaBodegas)
                            {
                                <option value="@bodega.BodegaId">@bodega.NombreBodega</option>
                            }
                        }
                    </select>


                    <select class="selectpicker" data-live-search="true">
                        <option data-tokens="ketchup mustard">Hot Dog, Fries and a Soda</option>
                        <option data-tokens="mustard">Burger, Shake and a Smile</option>
                        <option data-tokens="frosting">Sugar, Spice and all things nice</option>
                    </select>

                    <div class="invalid-feedback">Seleccione una bodega válida.</div>
                </div>

            </div>

            <select class="selectpicker" data-live-search="true">
                <option data-tokens="ketchup mustard">Hot Dog, Fries and a Soda</option>
                <option data-tokens="mustard">Burger, Shake and a Smile</option>
                <option data-tokens="frosting">Sugar, Spice and all things nice</option>
            </select>
            <table id="TablaProductosBodega" class="table-responsive table align-middle mb-0 bg-white w-100 table table-striped table-hover table-bordered rounded-2">
                <thead class="bg-light">
                    <tr>
                        <th>Producto</th>
                        <th>Cantidad</th>
                        <th>Acción</th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>

        </div>

        <div class="panel-footer text-right">
            <div class="btn btn-default" id="btnRegresarProducto" title="Descartar los cambios realizados"> Regresar</div>
            <div class="btn btn-success" title="Guardar registro" id="btnGuardarTraslado"> Guardar</div>
        </div>

    </form>
</div>


@section scripts {
    <script>
        $(document).ready(function () {
            // Inicializa el selectpicker
            $('#BodegaId').selectpicker({
                liveSearch: true,
                width: '100%'
            });
        });
    </script>
}
